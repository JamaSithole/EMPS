						navigateToURL(new URLRequest('http://localhost:8080/EPMS/EPMS.html'), '_self');
					}
					else
					{
						navigateToURL(new URLRequest('http://41.185.31.71:8080/EPMS/EPMS.html'), '_self');
					}
				} 
				
			}
			//Check for active popups 
			
